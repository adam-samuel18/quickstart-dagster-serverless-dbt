{
  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter",
    "editor.rulers": [
      79
  ]
  },
  "python.formatting.provider": "black",
  "python.formatting.blackArgs": ["--line-length", "79"],
  "python.linting.enabled": true,
  "python.linting.flake8Args": ["--max-line-length=79"],
  // SQLFluff
  "files.associations": {
    "*.sql": "jinja-sql",
    // optional: don't format models in `target/` dir.
    "**/target/**": ""
  },
  "editor.quickSuggestions": {
    "strings": true
  },
  // run "whereis sqlfluff" to find the executable path of your sqlfluff installation
  "sqlfluff.executablePath": "/Users/adams/anaconda3/bin/sqlfluff",
  "sqlfluff.dialect": "bigquery",
  "sqlfluff.linter.run": "onSave",
  "sqlfluff.experimental.format.executeInTerminal": true,
  "editor.formatOnSave": false,
  "dbt.queryLimit": 1000,
  "editor.rulers": [
    100
  ]
}